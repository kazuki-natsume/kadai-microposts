<ul class="list-unstyled mt-2">
  <% favorites.each do |favorite| %>
    <li class="d-flex">
      <img class="rounded me-2 mb-5" src="<%= gravatar_url(favorite.user, { size: 64 }) %>" alt="">
      <div>
        <div>
          <%= link_to favorite.user.name, user_path(favorite.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= favorite.content %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<%== pagy_bootstrap_nav(@pagy) %>