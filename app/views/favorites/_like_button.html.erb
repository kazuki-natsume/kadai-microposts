<% if current_user.like?(micropost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: user.id), method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, user.id %>
    <%= f.submit 'like', class: 'btn btn-outline-secondary btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, user.id %>
    <%= f.submit 'like', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% end %>